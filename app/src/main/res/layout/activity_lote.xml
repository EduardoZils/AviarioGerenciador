<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoteActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_fazenda"
        android:gravity="center"
        android:text="Seleção de aviário"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:gravity="center"
        android:text="Crie seu novo LOTE"
        android:textSize="@dimen/fab_margin" />

    <TextView
        android:id="@+id/tv_aviario_lote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:gravity="center"
        android:text="Aviario"
        android:textColor="@color/colorPreto"
        android:textSize="@dimen/fab_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:layout_weight="1"
            android:text="Chegada"
            android:textSize="@dimen/fab_margin" />

        <TextView
            android:id="@+id/tv_dt_chegada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:layout_weight="1"
            android:text="Selecione uma data"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fab_margin" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:layout_weight="1"
            android:text="Entrega estimada"
            android:textSize="@dimen/fab_margin" />

        <TextView
            android:id="@+id/tv_dt_estimada_entrega"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:layout_weight="1"
            android:text="Selecione uma data"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fab_margin" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_qt_aves"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:hint="Quantidade de aves"
        android:inputType="number" />

    <EditText
        android:id="@+id/et_linhagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:hint="Linhagem" />

    <Button
        android:id="@+id/bt_gerar_lote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:text="Gerar LOTE" />


</LinearLayout>