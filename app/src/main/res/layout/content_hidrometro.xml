<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HidrometroActivity"
    tools:showIn="@layout/activity_hidrometro">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_agua"
        android:gravity="center"
        android:text="Hidrômetro"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/fab_margin"
        android:text="Registre a leitura atual de seu aviário pelo menos uma vez por mês"
        android:textSize="@dimen/fab_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:layout_weight="1"
            android:text="Aviário pricipal:"
            android:textSize="@dimen/fab_margin" />

        <TextView
            android:id="@+id/tv_aviario_principal_hidrometro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:layout_weight="1"
            android:text="Nenhum aviário selecionado"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fab_margin" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:layout_weight="1"
            android:text="Data da leitura:"
            android:textSize="@dimen/fab_margin" />

        <TextView
            android:id="@+id/tv_dt_leitura_agua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:layout_weight="1"
            android:text="Selecione uma data"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fab_margin" />
    </LinearLayout>

    <EditText
        android:id="@+id/tv_leitura_atual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:hint="Leitura atual"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/bt_salvar_hidrometro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/fab_margin"
            android:text="Salvar" />

    </LinearLayout>

</LinearLayout>