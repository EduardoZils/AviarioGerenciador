<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RacaoActivity"
    tools:showIn="@layout/activity_racao">

    <TextView
        android:id="@+id/tv_codigo_aviario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_comida"
        android:gravity="center"
        android:text="Ração"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:gravity="center"
        android:text="Registre o tipo de ração que você utiliza"
        android:textSize="@dimen/fab_margin" />

    <EditText
        android:id="@+id/et_nome_racao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:inputType="text"
        android:hint="Nome ração" />

    <EditText
        android:id="@+id/et_tipo_racao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:hint="Tipo de ração (Ex. Engorda)"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/bt_salvar_racao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:text="salvar" />


</LinearLayout>