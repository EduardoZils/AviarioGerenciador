<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AddAviario"
    tools:showIn="@layout/activity_add_aviario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_codigo_aviario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_fazenda"
            android:gravity="center"
            android:text="Criação de Aviário #(ERROR)"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:gravity="center"
            android:text="Registre um novo aviário preenchendo os campos abaixo"
            android:textSize="@dimen/fab_margin" />


        <EditText
            android:id="@+id/et_numero_aviario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:hint="Numeração do Aviário"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_qt_aves"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:hint="Quantidade max. aves"
            android:inputType="number" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_margin="@dimen/fab_margin"
            android:text="Endereço"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="País"
                android:textSize="@dimen/fab_margin" />

            <Spinner
                android:id="@+id/spPais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"></Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Estado"
                android:textSize="@dimen/fab_margin" />

            <Spinner
                android:id="@+id/spEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"></Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Municipio"
                android:textSize="@dimen/fab_margin" />

            <Spinner
                android:id="@+id/spMunicipio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"></Spinner>

        </LinearLayout>

        <EditText
            android:id="@+id/et_cep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:hint="CEP"
            android:inputType="number" />


        <EditText
            android:id="@+id/et_referencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:hint="Referência do local"
            android:inputType="text"/>


        <EditText
            android:id="@+id/et_logradouro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:hint="Logradouro"
            android:inputType="text" />


        <EditText
            android:id="@+id/et_estrada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:hint="Estrada"
            android:inputType="text" />

        <Button
            android:id="@+id/bt_salvar_aviario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:text="Salvar" />

    </LinearLayout>


</ScrollView>