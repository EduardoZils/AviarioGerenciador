<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PesosActivity"
    tools:showIn="@layout/activity_pesos">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_balanca"
        android:gravity="center"
        android:text="Pesos"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:gravity="center"
        android:text="Efetue a pesagem de suas aves"
        android:textSize="@dimen/fab_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:layout_weight="1"
            android:text="Aviário pricipal:"
            android:textSize="@dimen/fab_margin" />

        <TextView
            android:id="@+id/tv_aviario_principal_pesos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:layout_weight="1"
            android:text="Nenhum aviário selecionado"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fab_margin" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_qt_aves_peso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:hint="Quantidade de aves nesta pesagem"
        android:inputType="number" />

    <EditText
        android:id="@+id/et_peso_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:hint="Peso total (Kg)"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/bt_salvar_pesos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:text="Salvar" />
</LinearLayout>